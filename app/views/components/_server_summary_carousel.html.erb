<div>
  <div id="homepageCarousel" class="carousel slide server-summaries">
    <ol class="carousel-indicators">
      <% servers.each_slice(6).each_with_index do |x, i| %>
        <li data-target="#homepageCarousel" data-slide-to="<%=i%>" <%if i==0%>class="active"<%end%>></li>
      <% end %>
    </ol>

<div class="carousel-inner" role="listbox">

  <%
    first = true
    servers.each_slice(6) do |server_page|
  %>
    <div class="item <%if first%>active<%end%>">
      <div class="row">
        <% first = false %>
        <% server_page.each do |server| %>
          <div class="col-md-4">
            <%= render partial: "components/server_summary", locals: {server: server, synchronized: true}%>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<a class="left carousel-control" role="button" data-slide="prev" href="#homepageCarousel">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>

<a class="right carousel-control" role="button" data-slide="next" href="#homepageCarousel">
  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>
  </div>

